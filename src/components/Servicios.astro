---
const servicios = [
  {
    titulo: 'Identificación de ayudas',
    descripcion: 'Analizamos tu empresa y encontramos todas las subvenciones disponibles: autonómicas, estatales y europeas.',
    icono: 'search',
  },
  {
    titulo: 'Elaboración de documentación',
    descripcion: 'Redactamos la memoria técnica, plan de viabilidad y toda la documentación requerida.',
    icono: 'document',
  },
  {
    titulo: 'Presentación de solicitudes',
    descripcion: 'Gestionamos la presentación telemática dentro de plazo con todas las garantías.',
    icono: 'upload',
  },
  {
    titulo: 'Seguimiento del expediente',
    descripcion: 'Monitorizamos el estado y respondemos a cualquier requerimiento de la administración.',
    icono: 'eye',
  },
  {
    titulo: 'Justificación económica',
    descripcion: 'Te ayudamos con la justificación técnica y económica para asegurar el cobro íntegro.',
    icono: 'check',
  },
  {
    titulo: 'Alertas de convocatorias',
    descripcion: 'Recibirás notificaciones cuando se publiquen ayudas relevantes para tu perfil.',
    icono: 'bell',
  },
];

const iconos: Record<string, string> = {
  search: 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
  document: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
  upload: 'M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12',
  eye: 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z',
  check: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  bell: 'M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9',
};
---

<section id="servicios" class="section bg-white">
  <div class="container-tight">
    <!-- Header -->
    <div class="max-w-2xl mb-12">
      <p class="text-sm font-medium text-accent uppercase tracking-wide mb-3">
        Servicios
      </p>
      <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-4">
        Gestión integral de subvenciones
      </h2>
      <p class="text-slate-600">
        Nos encargamos de todo el proceso para que puedas centrarte en tu negocio.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {servicios.map((servicio) => (
        <div class="border border-slate-200 rounded p-6 hover:border-slate-300 transition-colors">
          <div class="w-10 h-10 bg-slate-100 rounded flex items-center justify-center mb-4">
            <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={iconos[servicio.icono]}></path>
            </svg>
          </div>
          <h3 class="text-base font-semibold text-slate-900 mb-2">
            {servicio.titulo}
          </h3>
          <p class="text-sm text-slate-600 leading-relaxed">
            {servicio.descripcion}
          </p>
        </div>
      ))}
    </div>

    <!-- Pricing Banner -->
    <div class="bg-slate-900 rounded p-8 md:p-10">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div>
          <h3 class="text-xl font-bold text-white mb-2">
            Modelo a éxito: solo pagas si consigues la subvención
          </h3>
          <p class="text-slate-400">
            Consulta inicial gratuita. Sin costes si no conseguimos la ayuda.
          </p>
        </div>
        <div class="flex items-center gap-8">
          <div class="text-center">
            <p class="text-3xl font-bold text-white">0€</p>
            <p class="text-sm text-slate-400">Consulta inicial</p>
          </div>
          <div class="text-center">
            <p class="text-3xl font-bold text-white">0€</p>
            <p class="text-sm text-slate-400">Si no la consigues</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
