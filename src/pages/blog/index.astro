---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { posts } from '../../data/blog';

const seoTitle = 'Blog | Graphenum - Noticias sobre subvenciones y ayudas';
const seoDescription = 'Artículos, guías y noticias sobre subvenciones, ayudas públicas y financiación para empresas y autónomos en España.';
---

<Layout title={seoTitle} description={seoDescription}>
  <Header />

  <main class="flex-1 pt-20">
    <!-- Hero -->
    <section class="bg-slate-900 py-16 md:py-20">
      <div class="container-tight text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Blog
        </h1>
        <p class="text-lg text-slate-300 max-w-2xl mx-auto">
          Noticias, guías y consejos sobre subvenciones y ayudas para tu empresa
        </p>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class="py-12 md:py-16 bg-slate-50">
      <div class="container-tight">
        {posts.length === 0 ? (
          <p class="text-center text-slate-500 py-12">
            Próximamente publicaremos contenido en nuestro blog.
          </p>
        ) : (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post) => (
              <article class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                {post.image && (
                  <a href={`/blog/${post.slug}/`} class="block aspect-video bg-slate-100 overflow-hidden">
                    <img
                      src={post.image}
                      alt={post.title}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </a>
                )}
                <div class="p-6">
                  <div class="flex items-center gap-2 text-sm text-slate-500 mb-3">
                    <time datetime={post.date}>
                      {new Date(post.date).toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                  </div>
                  <h2 class="text-lg font-semibold text-slate-900 mb-2 line-clamp-2">
                    <a href={`/blog/${post.slug}/`} class="hover:text-accent transition-colors">
                      {post.title}
                    </a>
                  </h2>
                  <p class="text-slate-600 text-sm mb-4 line-clamp-3">
                    {post.excerpt}
                  </p>
                  {post.tags && post.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-4">
                      {post.tags.slice(0, 3).map((tag) => (
                        <span class="text-xs bg-slate-100 text-slate-600 px-2 py-1 rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                  <a
                    href={`/blog/${post.slug}/`}
                    class="inline-flex items-center gap-1 text-sm font-medium text-accent hover:text-accent/80 transition-colors"
                  >
                    Leer más
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    </section>
  </main>

  <Footer />
</Layout>
