---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Contacto from '../../components/Contacto.astro';
import { posts, getPostBySlug, type BlogPost } from '../../data/blog';

export function getStaticPaths() {
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;

const seoTitle = `${post.title} | Blog Graphenum`;
const seoDescription = post.excerpt;

// Simple markdown to HTML (basic)
function parseMarkdown(content: string): string {
  return content
    .replace(/^## (.*$)/gm, '<h2 class="text-2xl font-bold text-slate-900 mt-8 mb-4">$1</h2>')
    .replace(/^### (.*$)/gm, '<h3 class="text-xl font-semibold text-slate-900 mt-6 mb-3">$1</h3>')
    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
    .replace(/^\d+\. (.*$)/gm, '<li class="ml-4">$1</li>')
    .replace(/^- (.*$)/gm, '<li class="ml-4">$1</li>')
    .replace(/\n\n/g, '</p><p class="mb-4 text-slate-700 leading-relaxed">')
    .replace(/^(.+)$/gm, (match) => {
      if (match.startsWith('<')) return match;
      return match;
    });
}

const htmlContent = parseMarkdown(post.content);
---

<Layout title={seoTitle} description={seoDescription}>
  <Header />

  <main class="flex-1 pt-20">
    <!-- Hero -->
    <section class="bg-slate-900 py-12 md:py-16">
      <div class="container-tight">
        <a href="/blog/" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Volver al blog
        </a>
        <h1 class="text-2xl md:text-4xl font-bold text-white mb-4">
          {post.title}
        </h1>
        <div class="flex flex-wrap items-center gap-4 text-slate-400">
          <time datetime={post.date} class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            {new Date(post.date).toLocaleDateString('es-ES', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            {post.author}
          </span>
        </div>
      </div>
    </section>

    <!-- Content -->
    <section class="py-12 md:py-16">
      <div class="container-tight">
        <article class="max-w-3xl mx-auto">
          {post.image && (
            <img
              src={post.image}
              alt={post.title}
              class="w-full aspect-video object-cover rounded-lg mb-8"
            />
          )}

          <div class="prose prose-slate max-w-none">
            <p class="text-lg text-slate-600 mb-6 leading-relaxed">
              {post.excerpt}
            </p>
            <div set:html={htmlContent} class="blog-content" />
          </div>

          {post.tags && post.tags.length > 0 && (
            <div class="mt-8 pt-8 border-t border-slate-200">
              <div class="flex flex-wrap gap-2">
                {post.tags.map((tag) => (
                  <span class="text-sm bg-slate-100 text-slate-600 px-3 py-1 rounded-full">
                    #{tag}
                  </span>
                ))}
              </div>
            </div>
          )}
        </article>

        <!-- CTA -->
        <div class="max-w-3xl mx-auto mt-12 bg-accent/10 rounded-lg p-8 text-center">
          <h3 class="text-xl font-bold text-slate-900 mb-2">
            Â¿Necesitas ayuda con tus subvenciones?
          </h3>
          <p class="text-slate-600 mb-4">
            Te asesoramos de forma gratuita y solo cobramos si consigues la ayuda.
          </p>
          <a href="/#contacto" class="btn-accent">
            Solicitar asesoramiento
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .blog-content :global(h2) {
    @apply text-2xl font-bold text-slate-900 mt-8 mb-4;
  }
  .blog-content :global(h3) {
    @apply text-xl font-semibold text-slate-900 mt-6 mb-3;
  }
  .blog-content :global(p) {
    @apply mb-4 text-slate-700 leading-relaxed;
  }
  .blog-content :global(li) {
    @apply ml-6 mb-2 text-slate-700;
  }
  .blog-content :global(strong) {
    @apply font-semibold text-slate-900;
  }
</style>
