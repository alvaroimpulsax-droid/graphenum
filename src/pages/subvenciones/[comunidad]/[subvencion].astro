---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import Contacto from '../../../components/Contacto.astro';
import { comunidades } from '../../../data/comunidades';
import { subvenciones, getSubvencionById } from '../../../data/subvenciones';

export function getStaticPaths() {
  return subvenciones.map((sub) => {
    const comunidad = comunidades.find(c => c.slug === sub.comunidad);
    return {
      params: {
        comunidad: sub.comunidad,
        subvencion: sub.id
      },
      props: {
        subvencion: sub,
        comunidad
      },
    };
  });
}

const { subvencion, comunidad } = Astro.props;

const seoTitle = `${subvencion.nombre} | Subvenciones ${comunidad?.nombre}`;
const seoDescription = `${subvencion.objeto}. Plazo: ${subvencion.plazoTexto}. Te ayudamos con la tramitación de esta ayuda.`;

const estadoConfig = {
  abierta: { label: 'Convocatoria abierta', color: 'bg-green-100 text-green-800 border-green-200' },
  proxima: { label: 'Próxima convocatoria', color: 'bg-amber-100 text-amber-800 border-amber-200' },
  nueva: { label: 'Nueva ayuda', color: 'bg-accent/10 text-accent border-accent/20' },
  cerrada: { label: 'Convocatoria cerrada', color: 'bg-slate-100 text-slate-600 border-slate-200' },
};

const estado = estadoConfig[subvencion.estado];
---

<Layout title={seoTitle} description={seoDescription}>
  <Header />

  <main class="pt-20">
    <!-- Hero -->
    <section class="bg-slate-900 py-12 md:py-16">
      <div class="container-tight">
        <!-- Breadcrumb -->
        <nav class="mb-6">
          <ol class="flex items-center gap-2 text-sm">
            <li>
              <a href="/" class="text-slate-400 hover:text-white">Inicio</a>
            </li>
            <li class="text-slate-600">/</li>
            <li>
              <a href={`/subvenciones/${comunidad?.slug}/`} class="text-slate-400 hover:text-white">{comunidad?.nombre}</a>
            </li>
            <li class="text-slate-600">/</li>
            <li class="text-slate-300">{subvencion.codigo}</li>
          </ol>
        </nav>

        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class="text-sm font-mono text-slate-400 bg-slate-800 px-3 py-1 rounded">{subvencion.codigo}</span>
          <span class={`text-sm font-medium px-3 py-1 rounded-full border ${estado.color}`}>
            {estado.label}
          </span>
          {subvencion.regimen && (
            <span class="text-xs text-slate-400 bg-slate-800 px-2 py-1 rounded">{subvencion.regimen}</span>
          )}
        </div>

        <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4 leading-tight">
          {subvencion.nombre}
        </h1>

        <p class="text-lg text-slate-300 mb-6">
          {subvencion.organismo}
        </p>

        <div class="flex flex-wrap gap-4">
          <a href="#contacto" class="btn-accent btn-lg">
            Solicitar esta ayuda
          </a>
          <a href="#detalles" class="btn-outline-light btn-lg">
            Ver detalles
          </a>
        </div>
      </div>
    </section>

    <!-- Quick Info Bar -->
    <section class="bg-slate-50 border-b border-slate-200 py-6">
      <div class="container-tight">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div>
            <p class="text-xs text-slate-500 uppercase tracking-wide mb-1">Plazo</p>
            <p class="text-sm font-medium text-slate-900">{subvencion.plazoTexto}</p>
          </div>
          <div>
            <p class="text-xs text-slate-500 uppercase tracking-wide mb-1">Tipo de ayuda</p>
            <p class="text-sm font-medium text-slate-900">{subvencion.tipoAyuda}</p>
          </div>
          {(subvencion.ayudaMaxima || subvencion.inversionMaxima) && (
            <div>
              <p class="text-xs text-slate-500 uppercase tracking-wide mb-1">Ayuda máxima</p>
              <p class="text-sm font-medium text-accent">{subvencion.ayudaMaxima || subvencion.inversionMaxima}</p>
            </div>
          )}
          {subvencion.porcentajeBase && (
            <div>
              <p class="text-xs text-slate-500 uppercase tracking-wide mb-1">Intensidad</p>
              <p class="text-sm font-medium text-accent">{subvencion.porcentajeBase}</p>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section id="detalles" class="py-12 md:py-16">
      <div class="container-tight">
        <div class="space-y-10">
          <!-- Objeto -->
          <div>
            <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Objeto de la ayuda
            </h2>
            <p class="text-slate-700 leading-relaxed">{subvencion.objeto}</p>
            {subvencion.objetoDetallado && (
              <p class="text-slate-600 mt-3 leading-relaxed">{subvencion.objetoDetallado}</p>
            )}
          </div>

          <!-- Beneficiarios -->
          <div>
            <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              Beneficiarios
            </h2>
            <p class="text-slate-700 leading-relaxed mb-4">{subvencion.beneficiarios}</p>

            {subvencion.beneficiariosDetalle && subvencion.beneficiariosDetalle.length > 0 && (
              <div class="space-y-2 mb-4">
                {subvencion.beneficiariosDetalle.map((detalle) => (
                  <div class="flex items-start gap-3 bg-green-50 border border-green-200 rounded p-3">
                    <svg class="w-4 h-4 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <p class="text-sm text-slate-700">{detalle}</p>
                  </div>
                ))}
              </div>
            )}

            {subvencion.beneficiariosExcluidos && subvencion.beneficiariosExcluidos.length > 0 && (
              <div>
                <h3 class="text-sm font-semibold text-slate-700 mb-2 mt-4">Excluidos:</h3>
                <div class="space-y-2">
                  {subvencion.beneficiariosExcluidos.map((excluido) => (
                    <div class="flex items-start gap-3 bg-red-50 border border-red-200 rounded p-3">
                      <svg class="w-4 h-4 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                      <p class="text-sm text-slate-700">{excluido}</p>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>

          <!-- Colectivos Prioritarios -->
          {subvencion.colectivosPrioritarios && subvencion.colectivosPrioritarios.length > 0 && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                </svg>
                Colectivos prioritarios
              </h2>
              <div class="flex flex-wrap gap-2">
                {subvencion.colectivosPrioritarios.map((colectivo) => (
                  <span class="bg-amber-100 text-amber-800 text-sm px-3 py-1 rounded-full border border-amber-200">
                    {colectivo}
                  </span>
                ))}
              </div>
            </div>
          )}

          <!-- Líneas de ayuda -->
          {subvencion.lineas && subvencion.lineas.length > 0 && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                Líneas de ayuda
              </h2>
              <div class="space-y-4">
                {subvencion.lineas.map((linea) => (
                  <div class="border border-slate-200 rounded-lg overflow-hidden">
                    <div class="bg-slate-100 px-5 py-3 border-b border-slate-200">
                      <h3 class="font-semibold text-slate-900">{linea.nombre}</h3>
                      {linea.porcentaje && (
                        <p class="text-sm text-accent font-medium">{linea.porcentaje}</p>
                      )}
                    </div>
                    <div class="px-5 py-4">
                      {linea.descripcion && <p class="text-sm text-slate-700 mb-3">{linea.descripcion}</p>}
                      {linea.requisitos && linea.requisitos.length > 0 && (
                        <ul class="space-y-1">
                          {linea.requisitos.map((req) => (
                            <li class="flex items-start gap-2 text-sm text-slate-600">
                              <svg class="w-4 h-4 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                              </svg>
                              {req}
                            </li>
                          ))}
                        </ul>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Cuantías -->
          {subvencion.cuantias && subvencion.cuantias.length > 0 && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Cuantías de la ayuda
              </h2>
              <div class="overflow-x-auto">
                <table class="w-full border-collapse">
                  <thead>
                    <tr class="bg-slate-100">
                      <th class="text-left text-sm font-semibold text-slate-700 px-4 py-3 border border-slate-200">Concepto</th>
                      <th class="text-left text-sm font-semibold text-slate-700 px-4 py-3 border border-slate-200">Importe</th>
                    </tr>
                  </thead>
                  <tbody>
                    {subvencion.cuantias.map((cuantia, index) => (
                      <tr class={index % 2 === 0 ? 'bg-white' : 'bg-slate-50'}>
                        <td class="px-4 py-3 border border-slate-200">
                          <span class="text-sm text-slate-700">{cuantia.concepto}</span>
                          {cuantia.descripcion && (
                            <p class="text-xs text-slate-500 mt-1">{cuantia.descripcion}</p>
                          )}
                        </td>
                        <td class="px-4 py-3 border border-slate-200">
                          <span class="text-sm font-semibold text-accent">{cuantia.importe}</span>
                        </td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            </div>
          )}

          <!-- Incrementos -->
          {subvencion.incrementos && subvencion.incrementos.length > 0 && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
                Incrementos adicionales
              </h2>
              <div class="grid md:grid-cols-2 gap-3">
                {subvencion.incrementos.map((incremento) => (
                  <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                    <div class="flex justify-between items-start mb-1">
                      <span class="text-sm font-medium text-slate-800">{incremento.concepto}</span>
                      <span class="text-sm font-bold text-green-600">{incremento.importe}</span>
                    </div>
                    {incremento.descripcion && (
                      <p class="text-xs text-slate-600">{incremento.descripcion}</p>
                    )}
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Actuaciones Subvencionables -->
          {subvencion.actuacionesSubvencionables && subvencion.actuacionesSubvencionables.length > 0 && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
                Actuaciones subvencionables
              </h2>
              <div class="space-y-6">
                {subvencion.actuacionesSubvencionables.map((linea) => (
                  <div class="border border-slate-200 rounded-lg overflow-hidden">
                    <div class="bg-slate-100 px-5 py-3 border-b border-slate-200">
                      <h3 class="font-semibold text-slate-900">{linea.linea}</h3>
                      {linea.porcentaje && (
                        <p class="text-sm text-accent font-medium">Subvención: {linea.porcentaje}</p>
                      )}
                      {linea.descripcion && (
                        <p class="text-sm text-slate-600">{linea.descripcion}</p>
                      )}
                    </div>
                    <div class="divide-y divide-slate-100">
                      {linea.items.map((item) => (
                        <div class="flex justify-between items-start px-5 py-3 hover:bg-slate-50">
                          <div class="pr-4">
                            <span class="text-sm text-slate-700">{typeof item === 'string' ? item : item.nombre}</span>
                            {typeof item !== 'string' && item.descripcion && (
                              <p class="text-xs text-slate-500 mt-1">{item.descripcion}</p>
                            )}
                          </div>
                          {typeof item !== 'string' && item.importeMax && (
                            <span class="text-sm font-medium text-slate-900 whitespace-nowrap">
                              hasta {item.importeMax}
                            </span>
                          )}
                        </div>
                      ))}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Gastos Subvencionables -->
          {subvencion.gastosSubvencionables && subvencion.gastosSubvencionables.length > 0 && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Gastos subvencionables
              </h2>
              <div class="space-y-2">
                {subvencion.gastosSubvencionables.map((gasto) => gasto && (
                  <div class="flex items-start gap-3 bg-slate-50 border border-slate-200 rounded p-3">
                    <svg class="w-4 h-4 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <p class="text-sm text-slate-700">{gasto}</p>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Gastos NO Subvencionables -->
          {subvencion.gastosNoSubvencionables && subvencion.gastosNoSubvencionables.length > 0 && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                </svg>
                Gastos NO subvencionables
              </h2>
              <div class="space-y-2">
                {subvencion.gastosNoSubvencionables.map((gasto) => (
                  <div class="flex items-start gap-3 bg-red-50 border border-red-200 rounded p-3">
                    <svg class="w-4 h-4 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    <p class="text-sm text-slate-700">{gasto}</p>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Plazo de ejecución -->
          {subvencion.plazoEjecucion && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Plazo de ejecución
              </h2>
              <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
                <p class="text-slate-700">{subvencion.plazoEjecucion}</p>
              </div>
            </div>
          )}

          <!-- Requisitos -->
          {subvencion.requisitos && subvencion.requisitos.length > 0 && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Requisitos
              </h2>
              <div class="space-y-2">
                {subvencion.requisitos.map((req) => (
                  <div class="flex items-start gap-3 bg-slate-50 border border-slate-200 rounded p-3">
                    <svg class="w-4 h-4 text-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <p class="text-sm text-slate-700">{req}</p>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Obligaciones del beneficiario -->
          {subvencion.obligacionesBeneficiario && subvencion.obligacionesBeneficiario.length > 0 && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                Obligaciones del beneficiario
              </h2>
              <div class="space-y-2">
                {subvencion.obligacionesBeneficiario.map((obligacion) => (
                  <div class="flex items-start gap-3 bg-amber-50 border border-amber-200 rounded p-3">
                    <svg class="w-4 h-4 text-amber-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01"></path>
                    </svg>
                    <p class="text-sm text-slate-700">{obligacion}</p>
                  </div>
                ))}
              </div>
              {subvencion.mantenimientoEmpleo && (
                <div class="mt-4 bg-blue-50 border border-blue-200 rounded-lg p-4">
                  <p class="text-sm font-medium text-blue-800 mb-1">Mantenimiento del empleo:</p>
                  <p class="text-sm text-slate-700">{subvencion.mantenimientoEmpleo}</p>
                </div>
              )}
            </div>
          )}

          <!-- Notas Adicionales -->
          {subvencion.notasAdicionales && subvencion.notasAdicionales.length > 0 && (
            <div>
              <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Notas importantes
              </h2>
              <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 space-y-3">
                {subvencion.notasAdicionales.map((nota) => (
                  <div class="flex items-start gap-3">
