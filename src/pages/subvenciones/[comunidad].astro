---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Contacto from '../../components/Contacto.astro';
import { comunidades, type Comunidad } from '../../data/comunidades';

export function getStaticPaths() {
  return comunidades.map((comunidad) => ({
    params: { comunidad: comunidad.slug },
    props: { comunidad },
  }));
}

interface Props {
  comunidad: Comunidad;
}

const { comunidad } = Astro.props;

const seoTitle = `Subvenciones ${comunidad.nombre} 2025 | Ayudas y Convocatorias Actualizadas`;
const seoDescription = `Descubre todas las subvenciones disponibles en ${comunidad.nombre} para 2025. ✓ Requisitos ✓ Plazos ✓ Importes. Te ayudamos con la tramitación.`;
const seoKeywords = `subvenciones ${comunidad.nombre.toLowerCase()}, ayudas ${comunidad.nombre.toLowerCase()}, subvenciones empresas ${comunidad.nombre.toLowerCase()}, ayudas autonomos ${comunidad.nombre.toLowerCase()}`;

// Categories
const categorias = [
  { id: 'contratacion', nombre: 'Contratación' },
  { id: 'digitalizacion', nombre: 'Digitalización' },
  { id: 'emprendedores', nombre: 'Emprendedores' },
  { id: 'innovacion', nombre: 'Innovación' },
  { id: 'internacionalizacion', nombre: 'Internacionalización' },
  { id: 'inversion', nombre: 'Inversión' },
];

// Subvenciones organizadas por categoría
const subvencionesPorCategoria = {
  contratacion: [
    {
      codigo: 'TR342C',
      nombre: `Plan ${comunidad.nombre} Emprega 2026 - Ayuda a la Contratación`,
      organismo: `Gobierno de ${comunidad.nombre}`,
      plazo: 'Convocatoria prevista a inicios de 2026',
      estado: 'nueva',
    },
    {
      codigo: 'TR349F',
      nombre: 'Programa de ayudas a personas trabajadoras autónomas por la contratación indefinida',
      organismo: `Gobierno de ${comunidad.nombre}`,
      plazo: 'Convocatoria prevista a inicios de 2026',
      estado: 'nueva',
    },
    {
      codigo: 'TR301P',
      nombre: `${comunidad.nombre} Suma Talento: Plan formación empresas 2026`,
      organismo: `Gobierno de ${comunidad.nombre}`,
      plazo: 'Desde el 14 de enero hasta el 1 de diciembre de 2026',
      estado: 'nueva',
    },
  ],
  digitalizacion: [
    {
      codigo: 'DIG2026',
      nombre: 'Kit Digital - Ayudas a la Digitalización de Pymes',
      organismo: 'Red.es - Gobierno de España',
      plazo: 'Convocatoria abierta hasta agotar fondos',
      estado: 'abierta',
    },
    {
      codigo: 'TRANS01',
      nombre: 'Programa de Transformación Digital Empresarial',
      organismo: `Gobierno de ${comunidad.nombre}`,
      plazo: 'Convocatoria prevista primer trimestre 2026',
      estado: 'proxima',
    },
  ],
  emprendedores: [
    {
      codigo: 'EMP2026',
      nombre: 'Ayudas al Emprendimiento y Creación de Empresas',
      organismo: `Gobierno de ${comunidad.nombre}`,
      plazo: 'Convocatoria permanente',
      estado: 'abierta',
    },
    {
      codigo: 'AUTONOM',
      nombre: 'Cuota Cero para Nuevos Autónomos',
      organismo: `Gobierno de ${comunidad.nombre}`,
      plazo: 'Vigente durante 2026',
      estado: 'abierta',
    },
  ],
  innovacion: [
    {
      codigo: 'INNO2026',
      nombre: 'Proyectos de I+D+i Empresarial',
      organismo: `Gobierno de ${comunidad.nombre}`,
      plazo: 'Convocatoria prevista a mediados de 2026',
      estado: 'proxima',
    },
    {
      codigo: 'CDTI01',
      nombre: 'Proyectos de Desarrollo Experimental',
      organismo: 'CDTI - Gobierno de España',
      plazo: 'Convocatoria permanente',
      estado: 'abierta',
    },
  ],
  internacionalizacion: [
    {
      codigo: 'ICEX01',
      nombre: 'ICEX Next - Programa de Internacionalización',
      organismo: 'ICEX - Gobierno de España',
      plazo: 'Convocatorias periódicas',
      estado: 'abierta',
    },
    {
      codigo: 'EXPORT',
      nombre: `Ayudas a la Exportación ${comunidad.nombre}`,
      organismo: `Gobierno de ${comunidad.nombre}`,
      plazo: 'Convocatoria prevista segundo trimestre 2026',
      estado: 'proxima',
    },
  ],
  inversion: [
    {
      codigo: 'INV2026',
      nombre: 'Incentivos Regionales a la Inversión',
      organismo: 'Ministerio de Industria',
      plazo: 'Convocatoria permanente',
      estado: 'abierta',
    },
    {
      codigo: 'REIND',
      nombre: 'Reindustrialización y Fortalecimiento Industrial',
      organismo: 'Ministerio de Industria',
      plazo: 'Convocatoria anual - 2026',
      estado: 'proxima',
    },
  ],
};
---

<Layout
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
>
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <section class="bg-slate-700 py-16 md:py-20">
      <div class="container-tight">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
              Ayudas y subvenciones en {comunidad.nombre}
            </h1>
            <p class="text-lg text-slate-300 leading-relaxed">
              Somos expertos en Gestión Integral de Ayudas y Subvenciones al emprendimiento, contratación, inversión, digitalización, internacionalización, eficiencia energética, innovación...
            </p>
          </div>
        </div>

        <!-- Categorías -->
        <div class="mt-12">
          <p class="text-sm font-semibold text-white uppercase tracking-wide mb-4">
            Categorías
          </p>
          <div class="flex flex-wrap gap-3">
            {categorias.map((cat) => (
              <a
                href={`#${cat.id}`}
                class="px-6 py-3 bg-slate-600 hover:bg-slate-500 text-white text-sm font-medium rounded transition-colors"
              >
                {cat.nombre}
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Breadcrumb -->
    <nav class="bg-slate-100 py-3 border-b border-slate-200">
      <div class="container-tight">
        <ol class="flex items-center gap-2 text-sm">
          <li>
            <a href="/" class="text-slate-500 hover:text-slate-900">Inicio</a>
          </li>
          <li class="text-slate-400">/</li>
          <li>
            <a href="/#comunidades" class="text-slate-500 hover:text-slate-900">Comunidades</a>
          </li>
          <li class="text-slate-400">/</li>
          <li class="text-slate-900 font-medium">{comunidad.nombre}</li>
        </ol>
      </div>
    </nav>

    <!-- Subvenciones por categoría -->
    <section class="py-16 bg-white">
      <div class="container-tight">
        {categorias.map((categoria) => (
          <div id={categoria.id} class="mb-16 last:mb-0 scroll-mt-24">
            <h2 class="text-2xl font-bold text-slate-900 mb-6 pb-4 border-b border-slate-200">
              {categoria.nombre}
            </h2>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
              {subvencionesPorCategoria[categoria.id as keyof typeof subvencionesPorCategoria]?.map((sub) => (
                <a
                  href="#contacto"
                  class="block p-5 border border-slate-200 rounded hover:border-slate-300 hover:shadow-sm transition-all group"
                >
                  <div class="flex items-center justify-between gap-2 mb-3">
                    <span class="text-xs font-mono text-slate-400">{sub.codigo}</span>
                    {sub.estado === 'abierta' && (
                      <span class="text-xs text-green-600">Abierta</span>
                    )}
                    {sub.estado === 'nueva' && (
                      <span class="text-xs text-accent">Nueva</span>
                    )}
                    {sub.estado === 'proxima' && (
                      <span class="text-xs text-slate-400">Próxima</span>
                    )}
                  </div>
                  <h3 class="text-sm font-semibold text-slate-900 mb-2 leading-snug group-hover:text-accent">
                    {sub.nombre}
                  </h3>
                  <p class="text-xs text-slate-500">{sub.plazo}</p>
                </a>
              ))}
            </div>
          </div>
        ))}

        <!-- CTA Box -->
        <div class="mt-16 bg-slate-900 rounded p-8 md:p-12">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <h3 class="text-2xl font-bold text-white mb-3">
                ¿Buscas otra subvención en {comunidad.nombre}?
              </h3>
              <p class="text-slate-400">
                Hay muchas más ayudas disponibles. Cuéntanos tu proyecto y te informamos de todas las opciones sin compromiso.
              </p>
            </div>
            <div class="flex justify-start md:justify-end">
              <a href="#contacto" class="btn-accent btn-lg">
                Consulta gratuita
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Info Section -->
    <section class="py-16 md:py-24 bg-slate-50 border-t border-slate-200">
      <div class="container-tight">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <p class="text-sm font-medium text-accent uppercase tracking-wide mb-3">
              Especialistas en {comunidad.nombre}
            </p>
            <h2 class="text-2xl md:text-3xl font-bold text-slate-900 mb-6">
              ¿Por qué tramitar subvenciones con nosotros?
            </h2>
            <div class="space-y-4">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-slate-200 rounded flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900">Conocimiento local</h3>
                  <p class="text-slate-600 text-sm">Conocemos en profundidad las convocatorias específicas de {comunidad.nombre} y sus requisitos.</p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-slate-200 rounded flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900">Alertas de convocatorias</h3>
                  <p class="text-slate-600 text-sm">Te avisamos cuando se abran nuevas ayudas relevantes para tu empresa.</p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-slate-200 rounded flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900">Tramitación completa</h3>
                  <p class="text-slate-600 text-sm">Nos encargamos de toda la documentación y seguimiento del expediente.</p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-slate-200 rounded flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900">Solo pagas si la consigues</h3>
                  <p class="text-slate-600 text-sm">Trabajamos a éxito. Sin subvención, no hay coste para ti.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="bg-white border border-slate-200 rounded p-8">
            <div class="space-y-6">
              <div class="text-center pb-6 border-b border-slate-200">
                <p class="text-4xl font-bold text-slate-900">15+</p>
                <p class="text-slate-600 text-sm">Subvenciones activas en {comunidad.nombre}</p>
              </div>
              <div class="text-center pb-6 border-b border-slate-200">
                <p class="text-4xl font-bold text-slate-900">2.5M€</p>
                <p class="text-slate-600 text-sm">Conseguidos en la comunidad</p>
              </div>
              <div class="text-center pb-6 border-b border-slate-200">
                <p class="text-4xl font-bold text-slate-900">95%</p>
                <p class="text-slate-600 text-sm">Tasa de éxito</p>
              </div>
              <div class="text-center">
                <p class="text-4xl font-bold text-slate-900">24h</p>
                <p class="text-slate-600 text-sm">Respuesta garantizada</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact -->
    <Contacto />
  </main>

  <Footer />
</Layout>

<style>
  .bg-accent {
    background-color: #3D9BA2;
  }
</style>
